            message.innerText = "";
            let counter = 0;
            
            // 3. Efek Animasi Angka (Rolling)
            const interval = setInterval(() => {
                // Menampilkan angka acak sementara untuk efek visual
                const tempNum = Math.floor(Math.random() * 1000000) + 1;
                display.innerText = tempNum.toString().padStart(6, '0'); // Format 6 digit
                counter++;

                // Berhenti setelah 20 putaran (sekitar 2 detik)
                if (counter > 20) {
                    clearInterval(interval);
                    finalizeDraw(userCoupon);
                }
            }, 100); // Kecepatan ganti angka (100ms)
        }

        function finalizeDraw(userCoupon) {
            const display = document.getElementById('resultNumber');
            const btn = document.getElementById('drawBtn');
            const message = document.getElementById('resultMessage');

            // 4. Menentukan Pemenang (Logic Backend Seharusnya di Sini)
            // Di sini kita gunakan Math.random() murni.
            // Peluang menang 1 : 1.000.000
            const winningNumber = Math.floor(Math.random() * 1000000) + 1;
            
            display.innerText = winningNumber.toString().padStart(6, '0');

            // 5. Cek Kemenangan
            if (parseInt(userCoupon) === winningNumber) {
                message.innerHTML = "SELAMAT! ANDA MENANG! üèÜ";
                message.className = "message win";
                confettiEffect(); // Opsional: Bisa tambah efek konfeti
            } else {
                message.innerHTML = "Maaf, belum beruntung. Coba lagi! üò¢";
                message.className = "message lose";
            }

            // Reset Tombol
            btn.disabled = false;
            btn.innerText = "Putar Undian";
        }
