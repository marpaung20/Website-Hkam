        function startDraw() {
            const userCoupon = document.getElementById('userCoupon').value;
            const display = document.getElementById('resultNumber');
            const btn = document.getElementById('drawBtn');
            const message = document.getElementById('resultMessage');

            // 1. Validasi Input
