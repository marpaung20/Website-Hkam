                counter++;

                // Berhenti setelah 20 putaran (sekitar 2 detik)
                if (counter > 20) {
                    clearInterval(interval);
                    finalizeDraw(userCoupon);
                }
            }, 100); // Kecepatan ganti angka (100ms)
        }

        function finalizeDraw(userCoupon) {
            const display = document.getElementById('resultNumber');
